<form action="/estate/create" method="POST">
    <div class="row">
        <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
                <label>Property title:</label>
                <input type="text" class="form-control" name="RealEstate[title]" required>
            </div>
            <div class="form-group">
                <label>Estate:</label>
                <select class="form-control"id="Area" name="RealEstate[estate]">
                    <option value="Festival City">Festival City</option>
                    <option value="Tin Ma Court">Tin Ma Court</option>
                    <option value="City One Shatin">City One Shatin</option>
                </select>
            </div>
            <div class="form-group">
                <label>Gross Area:</label>
                <input type="number" class="form-control" name="RealEstate[area]" required>
            </div>
            <div class="form-group">
                <label>Rent:</label>
                <input type="number" class="form-control" name="RealEstate[rent]" required>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
                <label>Image URL:</label>
                <input type="text" class="form-control" name="RealEstate[url]" value="https://upload.wikimedia.org/wikipedia/commons/thumb/4/44/Green_Building_-_MIT%2C_Cambridge%2C_MA_-_DSC05589.jpg/1024px-Green_Building_-_MIT%2C_Cambridge%2C_MA_-_DSC05589.jpg" required>
            </div>
            <div class="form-group">
                <label>Bedrooms:</label>
                <input type="number" class="form-control" name="RealEstate[bedroom]" required>
            </div>
            <div class="form-group">
                <label>Expect Tenants:</label>
                <input type="number" class="form-control" name="RealEstate[tenant]" required>
            </div>
            <div class="form-group">
                <input type="checkbox" name="RealEstate[checkbox]" value="highlight" checked>
                <span>Highlighted Property</span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>